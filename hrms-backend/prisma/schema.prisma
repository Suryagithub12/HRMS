generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// *
///  * ===================== USER =====================
model User {
  id                 String           @id @default(uuid())
  email              String           @unique
  password           String
  firstName          String
  lastName           String?
  role               Role             @default(AGILITY_EMPLOYEE)
  isActive           Boolean          @default(true)
  departmentId       String?
  position           String?
  salary             Float?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  reimbursements     Reimbursement[]
  attendances        Attendance[]
  approvals          Leave[]          @relation("LeaveApprover")
  leaves             Leave[]
  notifications      Notification[]
  payrolls           Payroll[]
  refreshTokens      RefreshToken[]
  departments        UserDepartment[]
  department         Department?      @relation("DepartmentUsers", fields: [departmentId], references: [id])
  managedDepartments Department[]     @relation("DepartmentManagers")

  // üî• LEAVE SYSTEM
  leaveBalance    Float     @default(0) // current usable balance
  lastLeaveCredit DateTime? // last month credit date

  leaveApprovals         LeaveApproval[]
  reimbursementApprovals ReimbursementApproval[]

  attendanceCorrections AttendanceCorrection[]
  witnessedCorrections  AttendanceCorrection[] @relation("CorrectionWitness")

  //  Resignation relation added
  resignations Resignation[]

  //  reverse relation
  responsibleForLeaves Leave[] @relation("LeaveResponsible")

  ///  CompOff balance and relation
  compOffBalance Float       @default(0) // supports 0.5 half-day
  compOffs       CompOff[]
  weeklyOffs     WeeklyOff[]

  // FREELANCE FACULTY SYSTEM
  freelanceFacultyManagerRecord FreelanceFacultyManager? @relation("FreelanceFacultyManagerEmployee")
  managedFreelanceFaculties     FreelanceFaculty[]       @relation("FreelanceFacultyManager")
  // createdFreelanceDayEntries    FreelanceFacultyDayEntry[] @relation("FreelanceFacultyDayEntryCreator")

  @@map("users")
}

/// *
///  * ===================== WEEKLY/OFF (Roster + Weekly Supported)
model WeeklyOff {
  id        String    @id @default(uuid())
  userId    String
  offDay    String? // "Monday" (Weekly Off)
  offDate   DateTime? // One time Date Off
  isFixed   Boolean   @default(true) // true=Weekly repeated, false=Roster/one-time
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
}

/// *
///  * ===================== COMP-OFF MODEL =====================
model CompOff {
  id         String    @id @default(uuid())
  userId     String
  workDate   DateTime
  duration   Float     @default(1) // 1 = full, 0.5 = half ‚≠ê
  status     String    @default("PENDING") // APPROVED, REJECTED
  approvedAt DateTime?
  expiryDate DateTime?
  note       String?

  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// *
///  * ===================== DEPARTMENT =====================
model Department {
  id        String           @id @default(uuid())
  name      String           @unique
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  members   UserDepartment[]
  users     User[]           @relation("DepartmentUsers")
  managers  User[]           @relation("DepartmentManagers")

  @@map("departments")
}

/// *
///  * ===================== USER ‚Üî DEPARTMENT (JOIN TABLE) =====================
model UserDepartment {
  id           String     @id @default(uuid())
  userId       String
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])
  user         User       @relation(fields: [userId], references: [id])

  @@unique([userId, departmentId])
  @@map("user_departments")
}

/// *
///  * ===================== ATTENDANCE =====================
model Attendance {
  id                  String    @id @default(uuid())
  userId              String
  date                DateTime
  checkIn             DateTime?
  checkOut            DateTime?
  status              String
  note                String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  user                User      @relation(fields: [userId], references: [id])
  lateHalfDayEligible Boolean   @default(false)

  @@unique([userId, date])
  @@map("attendances")
}

model AttendanceCorrection {
  id          String    @id @default(uuid())
  userId      String
  date        DateTime  @db.Date
  reason      String
  checkIn     DateTime?
  checkOut    DateTime?
  witnessId   String? // üëà NEW
  witness     User?     @relation("CorrectionWitness", fields: [witnessId], references: [id])
  status      String    @default("PENDING") // PENDING | APPROVED | REJECTED
  adminReason String?
  createdAt   DateTime  @default(now())
  decidedAt   DateTime?

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, date]) // same day duplicate request block
}

/// *
///  * ===================== LEAVE =====================
model Leave {
  id           String    @id @default(uuid())
  userId       String
  type         LeaveType
  startDate    DateTime  @db.Date
  endDate      DateTime  @db.Date
  reason       String?
  status       String    @default("PENDING")
  approverId   String?
  rejectReason String?

  // ‚úÖ RESPONSIBLE PERSON (SAFE SYNTAX)
  responsiblePersonId String?
  responsiblePerson   User?   @relation("LeaveResponsible", fields: [responsiblePersonId], references: [id])

  // ‚úÖ ADD THESE (SOFT DELETE)
  isAdminDeleted    Boolean @default(false)
  isEmployeeDeleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  approver  User?           @relation("LeaveApprover", fields: [approverId], references: [id])
  user      User            @relation(fields: [userId], references: [id])
  approvals LeaveApproval[]

  @@index([userId, startDate, endDate])
  @@map("leaves")
}

/// *
///  * ===================== PAYROLL =====================
model Payroll {
  id          String   @id @default(uuid())
  userId      String
  salaryMonth DateTime
  baseSalary  Float
  bonus       Float    @default(0)
  deductions  Float    @default(0)
  netSalary   Float
  slipUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId, salaryMonth])
  @@map("payrolls")
}

/// *
///  * ===================== REIMBURSEMENT =====================
model Reimbursement {
  id                String              @id @default(uuid())
  userId            String
  title             String
  description       String?
  totalAmount       Float
  status            ReimbursementStatus @default(PENDING)
  createdAt         DateTime            @default(now())
  isAdminDeleted    Boolean             @default(false)
  isEmployeeDeleted Boolean             @default(false)
  rejectReason      String?
  bills             Bill[]
  user              User                @relation(fields: [userId], references: [id])

  approvals ReimbursementApproval[]
}

/// *
///  * ===================== BILL =====================
model Bill {
  id              String        @id @default(uuid())
  reimbursementId String
  fileUrl         String
  amount          Float
  note            String?
  reimbursement   Reimbursement @relation(fields: [reimbursementId], references: [id])
}

/// *
///  * ===================== NOTIFICATION =====================
model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  body      String
  isRead    Boolean  @default(false)
  meta      Json?
  createdAt DateTime @default(now())
  readByIds String[] @default([])
  user      User     @relation(fields: [userId], references: [id])

  @@map("notifications")
}

/// *
///  * ===================== REFRESH TOKEN =====================
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@map("refresh_tokens")
}

///////////////////////////
/// üî• UPDATED RESIGNATION
///////////////////////////
model Resignation {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Form fields
  lastWorking    DateTime
  reasonType     String   @default("Other")
  reason         String? // Optional text
  noticePeriod   Int?
  handoverDetail String?
  declaration    Boolean  @default(false)

  // Admin side
  status            ResignStatus @default(PENDING)
  rejectReason      String?
  isEmployeeDeleted Boolean      @default(false)
  isAdminDeleted    Boolean      @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LeaveApproval {
  id        String              @id @default(uuid())
  leaveId   String
  managerId String
  status    LeaveApprovalStatus @default(PENDING)
  reason    String?
  actedAt   DateTime?

  leave   Leave @relation(fields: [leaveId], references: [id])
  manager User  @relation(fields: [managerId], references: [id])

  @@unique([leaveId, managerId]) // 1 manager = 1 decision per leave
}

/// ===================== HOLIDAY =====================
model Holiday {
  id          String   @id @default(uuid())
  title       String
  date        DateTime @unique
  day         String
  description String?
  createdAt   DateTime @default(now())
}

model ReimbursementApproval {
  id              String                      @id @default(uuid())
  reimbursementId String
  managerId       String
  status          ReimbursementApprovalStatus @default(PENDING)
  reason          String?
  actedAt         DateTime?

  reimbursement Reimbursement @relation(fields: [reimbursementId], references: [id])
  manager       User          @relation(fields: [managerId], references: [id])

  @@unique([reimbursementId, managerId])
}

// ============================FREELANCE FACULTY MANAGER=====================
model FreelanceFacultyManager {
  id         String   @id @default(uuid())
  employeeId String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  employee  User               @relation("FreelanceFacultyManagerEmployee", fields: [employeeId], references: [id])
  faculties FreelanceFaculty[] @relation("FFM_Faculties")

  @@map("freelance_faculty_managers")
}

// ==============================FREELANCE FACULTY========================
model FreelanceFaculty {
  id                        String   @id @default(uuid())
  managerId                 String // FK to User.id (the manager employee)
  //new adddition
  email                     String?  @unique
  phone                     String?
  joiningDate               DateTime @default(now())
  name                      String
  subjects                  String[] // Array of subject names
  preferredDaysOfWeek       String[] // Array like ["MON", "TUE", "WED", "THU", "FRI", "SAT", "SUN"]
  status                    String   @default("ACTIVE") // ACTIVE | INACTIVE
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
  freelanceFacultyManagerId String

  manager                 User                    @relation("FreelanceFacultyManager", fields: [managerId], references: [id])
  dayEntries              DayEntry[]
  freelanceFacultyManager FreelanceFacultyManager @relation("FFM_Faculties", fields: [freelanceFacultyManagerId], references: [id])
  youtubeLectures         YoutubeLecture[]

  @@index([managerId])
  @@map("freelance_faculties")
}

model YoutubeLecture {
  id          String   @id @default(uuid())
  facultyId   String
  date        DateTime @db.Date
  youtubeUrl  String
  title       String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  faculty FreelanceFaculty @relation(fields: [facultyId], references: [id], onDelete: Cascade)

  @@index([facultyId, date])
  @@map("freelance_faculty_youtube_lectures")
}

// Batch Model
model Batch {
  id          String    @id @default(cuid())
  name        String
  code        String?   @unique
  description String?
  startDate   DateTime
  endDate     DateTime?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  // assignments BatchAssignment[]
  classes Class[]

  @@map("batches")
}

// Subject Model
model Subject {
  id          String   @id @default(cuid())
  name        String
  code        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  classes Class[]
  // assignments BatchAssignment[]

  @@map("subjects")
}

// Day Entry Model (Main tracking table for each faculty per day)
model DayEntry {
  id            String   @id @default(cuid())
  facultyId     String
  date          DateTime @db.Date
  isPresent     Boolean  @default(true)
  remarks       String?
  totalClasses  Int      @default(0) // Computed field for quick access
  totalDuration Int      @default(0) // Total minutes, computed
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  createdBy     String? // Manager who created the entry

  // Relations
  faculty FreelanceFaculty @relation(fields: [facultyId], references: [id], onDelete: Cascade)
  classes Class[]

  @@unique([facultyId, date])
  @@index([facultyId, date])
  @@index([date])
  @@map("freelance_faculty_day_entries")
}

// Class Model (Individual class session)
model Class {
  id         String   @id @default(cuid())
  dayEntryId String
  batchId    String
  subjectId  String
  topic      String
  startTime  DateTime @db.Time
  endTime    DateTime @db.Time
  duration   Int // Duration in minutes
  notes      String? // Additional notes about the class
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  dayEntry DayEntry @relation(fields: [dayEntryId], references: [id], onDelete: Cascade)
  batch    Batch    @relation(fields: [batchId], references: [id], onDelete: Cascade)
  subject  Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@index([dayEntryId])
  @@index([batchId])
  @@index([subjectId])
  @@map("classes")
}

/// *
///  * ===================== ENUMS =====================
enum Role {
  ADMIN
  AGILITY_EMPLOYEE
  LYF_EMPLOYEE
  // FREELANCE_FACULTY_MANAGER
}

enum LeaveType {
  PAID
  UNPAID
  SICK
  CASUAL
  WFH
  HALF_DAY
  COMP_OFF
}

enum ReimbursementStatus {
  PENDING
  APPROVED
  REJECTED
}

enum LeaveApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ReimbursementApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AttendanceCorrectionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ResignStatus {
  PENDING
  APPROVED
  REJECTED
}
